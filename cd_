#!/bin/sh

#activate automatic the virtual_env for projects python

if [ $1 ]; then
    if [ "$1" = ".." ]; then
        deactivate
        cd ..
    else
        if [ -d $1 ]; then
            cd $1
            if [ -a ".$1/bin/activate" ]; then
                source .$1/bin/activate
            else
                echo "N찾o existe um virtual_env neste diret처rio!"
            fi
        else
            echo "N찾o foi possivel encontrar este diret처rio!"
        fi
    fi
fi

exec zsh
